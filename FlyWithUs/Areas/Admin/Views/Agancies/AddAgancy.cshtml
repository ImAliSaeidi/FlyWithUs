@model AgancyAddDTO
@{
    ViewData["Title"] = "AddAgancy";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="box-header with-border">
    افزودن آژانس |
    <a href="/Admin/Agancies/GetAllAgancy" class="btn bg-navy"> <i class=" fa fa-backward"></i> بازگشت </a>
</h1>

<form method="post" class="box-body">

    <div class="col-xs-4">
        <label asp-for="Name">نام آژانس</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="نام">
        <span class="text-danger" asp-validation-for="Name"></span>
        <br />
        <button type="submit" class=" btn btn-success btn-lg btn-block"> <i class="  fa fa-check"></i> ثبت </button>
    </div>
</form>

