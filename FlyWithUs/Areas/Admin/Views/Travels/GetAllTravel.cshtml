@model List<TravelDTO>
@{
    ViewData["Title"] = "GetAllTravel";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="box-header with-border">لیست سفر ها | <a href="AddTravel" class="btn btn-success btn-lg"> <i class="fa fa-plus"></i> افزودن سفر </a></h1>

<div class="box">
    <div class="box-body">
        <table class="table table-bordered" style="table-layout:auto;width:100%">
            <thead>
                <tr>
                    <th style="width: 10px">ردیف</th>
                    <th>کد سفر</th>
                    <th>مبدا</th>
                    <th>مقصد</th>
                    <th>ظرفیت</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                }
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@count</td>
                        <td>@item.Code</td>
                        <td>@item.OriginCityName</td>
                        <td>@item.DestinationCityName</td>
                        <td>@item.MaxCapacity</td>
                        <td>
                            <a href="DeleteTravel/@item.Id" class="btn btn-info btn-sm"> <i class="fa fa-info"></i> جزئیات </a> |
                            <a href="DeleteTravel/@item.Id" class="btn btn-danger btn-sm"> <i class="fa fa-trash"></i> حذف </a>|
                            <a href="EditTravel/@item.Id" class="btn btn-warning btn-sm"> <i class="fa fa-pen"></i> ویرایش </a>
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
    <div class="box-footer clearfix">
        <ul class="pagination pagination-sm no-margin pull-right">
            <li><a href="#">«</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">»</a></li>
        </ul>
    </div>
</div>

